<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" verbose="1" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="listeners.AttachmentListener"/>
    </listeners>
    <test name="Smoke tagging tests">
            <groups>
                <run>
                    <include name="tagging" />
                </run>
            </groups>
        <classes>
            <class name="regression.ProductionCasePopulationTest"/>
        </classes>
    </test>

    <test name="Smoke stapling tests">
            <groups>
                <run>
                    <include name="stapling" />
                </run>
            </groups>
        <classes>
            <class name="regression.ProductionCasePopulationTest"/>
        </classes>
    </test>
</suite>